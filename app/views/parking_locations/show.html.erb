<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <p class="text-2xl font-bold mb-4"><%=@parking_location.street%></p>

    <table class="table-auto w-full text-left  relative">
    <thead>
    <tr>
      <th>Spot</th>
      <th>Status</th>
      <th>Last Reading</th>
    <tr>
    <thead>
    <tbody>
    <% @parking_location.parking_spots.each do |parking_spot|%>
    <tr class="border-b">
      <td class="py-2"><%=parking_spot.name%></td>
      <td><%=parking_spot.status%></td>
      <td><%=parking_spot.ultrasonic_readings.last&.reading || "-"%></td>
    <tr>
    <%end%>
    </tbody>
    </table>



    <%= link_to "Edit this parking_location", edit_parking_location_path(@parking_location), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this parking_location", parking_location_path(@parking_location), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to "Back to parking_locations", parking_locations_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
